// To go in the config.json file
"_audio": {
    "_isEnabled": true
},
"_reducedText": {
    "_isEnabled": true
}

// To go in the course.json file
"_audio": {
    "_isEnabled": true,
    "_enableAudioDrawer": true,
    "title": "Audio",
    "description": "Click here to view the audio settings for this course.",
    "_audioItems": [
        {
            "_status": 1,
            "title": "Narration",
            "description": "This content in this course is narrated. You can save your preference here too."
        },
        {
            "_status": 1,
            "title": "Sound FX",
            "description": "If you don't want sound effects to play throughout the course you can switch them off here."
        },
        {
            "_status": 1,
            "title": "Music",
            "description": "Some areas of the course may contain background music."
        }
    ],
    "_prompt": {
        "_isEnabled": true,
        "title": "Audio settings",
        "body": "Audio is turned on by default in this module. You can turn the audio on or off at any time by selecting the <span class='speaker-icon fa-volume-up audio-notify-icon'></span> icon.<br><br><b>Text settings</b><br><br>You can choose either full or reduced on-screen text. The full text option matches the audio exactly. The reduced text option summarises the audio.<br><br>Please select full or reduced text (you can change you preference at any time by selecting the <span class='speaker-icon fa-volume-up audio-notify-icon'></span> icon.",
        "_buttons": {
            "full": "Full",
            "reduced": "Reduced"
        }
    }
}

// To go in the course.json file
"_reducedText": {
    "_isEnabled": true,
    "title": "Audio and text setting",
    "bodyAudioOn": "You have chosen to turn audio off. The on-screen text will default to full text.",
    "bodyAudioOff": "You have chosen to turn audio on. Please select whether you would like to view full or reduced text.",
    "_buttons": {
        "confirm": "Confirm",
        "cancel": "Cancel",
        "full": "Full",
        "reduced": "Reduced"
    }
}

// To go in article/block/component.json
"_audio": {
    "_isEnabled": true,
    "_showControls": false,
    "_autoplay": true,
    "_channel": 0, // channels represent the number of items defined in the course.json settings, by default there are 0, 1 and 2 available (3 _audioItems in the array)
    "_location": "", // pre-defined styles are "top-left", "top-right", "bottom-left", "bottom-right"
    "_media": {
        "desktop": "course/en/audio/***.mp3",
        "mobile": "course/en/audio/***.mp3"
    }
}

