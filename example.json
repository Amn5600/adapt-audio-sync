// To go in the config.json file
"_audio": {
    "_isEnabled": true
},
"_reducedText": {
    "_isEnabled": true
}

// To go in the course.json file
"_audio": {
    "_isEnabled": true,
    "_enableAudioDrawer": true,
    "title": "Audio",
    "description": "Click here to view the audio settings for this course.",
    "_audioItems": [
        {
            "_status": 1,
            "title": "Narration",
            "description": "This content in this course is narrated. You can save your preference here too."
        },
        {
            "_status": 1,
            "title": "Sound FX",
            "description": "If you don't want sound effects to play throughout the course you can switch them off here."
        },
        {
            "_status": 1,
            "title": "Music",
            "description": "Some areas of the course may contain background music."
        }
    ],
    "_prompt": {
        "_isEnabled": true,
        "title": "Audio setting",
        "body": "There is audio included in this module. Please select whether you would like full default text or reduced text.",
        "_buttons": {
            "full": "Full",
            "reduced": "Reduced"
        }
    }
}

// To go in the course.json file
"_reducedText": {
    "_isEnabled": true,
    "title": "Audio and text setting",
    "bodyAudioOn": "The audio will now be turned off and the text on screen will be set to the full default size.",
    "bodyAudioOff": "The audio will now be turned on. Would you like full default text or reduced text?",
    "_buttons": {
        "confirm": "Confirm",
        "cancel": "Cancel",
        "full": "Full",
        "reduced": "Reduced"
    }
}

// To go in article/block/component.json
"_audio": {
    "_isEnabled": true,
    "_showControls": false,
    "_autoplay": true,
    "_channel": 0, // channels represent the number of items defined in the course.json settings, by default there are 0, 1 and 2 available (3 _audioItems in the array)
    "_location": "", // pre-defined styles are "top-left", "top-right", "bottom-left", "bottom-right"
    "_media": {
        "desktop": "course/en/audio/***.mp3",
        "mobile": "course/en/audio/***.mp3"
    }
}

// To go in article/block/component.json
"displayTitleReduced": " Reduced title",
"bodyReduced": "Reduced text",
    "_reducedText": {
        "_isEnabled": true
    },